{{page-title 'Edit'}}
{{page-header heading='Users - Edit'}}
<PageContent>
  <ValidatedForm
    @model={{changeset this.model this.UserValidations}}
    @on-submit={{action 'submit'}}
    @submit-label='Save'
    as |f|
  >

    {{f.input label='Name' name='name'}}
    {{f.input label='Email' name='email'}}
    {{f.input label='Gender' name='gender'}}
    {{f.input label='Status' name='status'}}
    {{f.submit label='Save'}}
  </ValidatedForm>
</PageContent>